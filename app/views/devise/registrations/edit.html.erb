<div class="row">
  <aside class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.name %></h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-circle img-responsive" src="<%= @user.image %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-xs-8">
    <h3 cladd~"panel-title">プロフィール編集</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <p><b>お住まい</b></p>
    <label class="radio-inline"><%= f.radio_button :address, "久米島" %>島内</label>
    <label class="radio-inline"><%= f.radio_button :address, "島外" %>島外</label>
  </div>

  <div class="form-group">
    <p><b>所属</b></p>
    <label class="radio-inline"><%= f.radio_button :affiliation, "個人" %>個人</label>
    <label class="radio-inline"><%= f.radio_button :affiliation, "企業" %>企業</label>
  </div>

  <div class= "form-group">
    <%= f.label :introduction, "自己紹介" %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "更新", class: 'btn btn-success btn-block' %>
  </div>
<% end %>

<h3>退会する</h3>

<p><%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: 'btn btn-danger btn-block'%></p>
  </div>
<%= link_to "マイページに戻る", user_path(current_user) %>
</div>